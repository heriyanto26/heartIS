<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminScheduleDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Name"
            android:textSize="16dp"
            android:fontFamily="@font/poppinsblack"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text=":"
            android:textSize="16dp"
            android:fontFamily="@font/poppinsblack"
            android:textColor="@color/black"
            android:layout_marginLeft="71dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtNamaMahasiswa"
            android:text="Stanley Jeven"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/poppinsblack"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:text="psychologyst"
            android:textSize="16dp"
            android:fontFamily="@font/poppinsblack"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text=":"
            android:textSize="16dp"
            android:fontFamily="@font/poppinsblack"
            android:textColor="@color/black"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtNamaPsikolog"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/poppinsblack"
            android:textColor="@color/black"
            android:text="Psikolog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:text="Media"
            android:textSize="16dp"
            android:fontFamily="@font/poppinsblack"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text=":"
            android:textSize="16dp"
            android:fontFamily="@font/poppinsblack"
            android:textColor="@color/black"
            android:layout_marginLeft="69dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/TxtMedia"
            android:text="Media"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/poppinsblack"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:text="Date/Time"
            android:textSize="16dp"
            android:fontFamily="@font/poppinsblack"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text=":"
            android:textSize="16dp"
            android:fontFamily="@font/poppinsblack"
            android:textColor="@color/black"
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/TxtDateTime"
            android:text="Date/Time"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/poppinsblack"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAcc"
                android:layout_width="87dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:backgroundTint="#2B4DA3"
                android:text="Yes" />

            <Button
                android:id="@+id/btnReject"
                android:layout_width="87dp"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp"
                android:layout_gravity="center"
                android:backgroundTint="#2B4DA3"
                android:text="No" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>