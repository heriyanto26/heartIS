<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dashboard">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Dashboard"
        android:textSize="32dp"
        android:fontFamily="@font/poppinsblack"
        android:textColor="#6487DF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Bulan"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsblack"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=":"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsblack"
                android:textColor="@color/black"
                android:layout_marginLeft="139.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtBulanTahum"
                android:text="Bulan dan Tahun"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppinsblack"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Jumlah akun"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsblack"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=":"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsblack"
                android:textColor="@color/black"
                android:layout_marginLeft="76dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtJumlahAkun"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppinsblack"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:text="Jumlah Psikolog"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsblack"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=":"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsblack"
                android:textColor="@color/black"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtJumlahPsikolog"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppinsblack"
                android:textColor="@color/black"
                android:text="Psikolog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:text="Jumlah Test"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsblack"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=":"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsblack"
                android:textColor="@color/black"
                android:layout_marginLeft="86dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtJumlahTest"
                android:text="Media"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppinsblack"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:text="Jumlah Konsultasi"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsblack"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=":"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsblack"
                android:textColor="@color/black"
                android:layout_marginLeft="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtJumlahKonsul"
                android:text="Jumlah"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppinsblack"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btnBack"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:text="back"
        android:textSize="20dp"
        android:backgroundTint="#2B4DA3"
        android:fontFamily="@font/poppinsblack"/>


</LinearLayout>