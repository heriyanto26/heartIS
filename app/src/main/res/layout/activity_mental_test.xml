<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MentalTest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/poppinsblack"
            android:text="Mental Test"
            android:textColor="#6487DF"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/idPertanyaan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/poppinsblack"
            android:text="Pertanyaan"
            android:textColor="#2B4DA3"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bgmentaltest"
        android:orientation="vertical">

        <Button
            android:layout_gravity="center"
            android:id="@+id/btnPilihan1"
            android:text="Pilihan 1"
            android:fontFamily="@font/poppinsblack"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#6487DF"
            android:background="@drawable/rounded_corner"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnPilihan2"
            android:text="Pilihan 2"
            android:fontFamily="@font/poppinsblack"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#6487DF"
            android:background="@drawable/rounded_corner"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnPilihan3"
            android:text="Pilihan 3"
            android:fontFamily="@font/poppinsblack"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#6487DF"
            android:background="@drawable/rounded_corner"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnPilihan4"
            android:text="Pilihan 4"
            android:fontFamily="@font/poppinsblack"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#6487DF"
            android:background="@drawable/rounded_corner"
            app:backgroundTint="@null" />

    </LinearLayout>



</LinearLayout>