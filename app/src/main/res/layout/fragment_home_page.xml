<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <ImageView
        android:id="@+id/btnImgProfile"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/fotoprofile"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="320dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/poppinsblack"
            android:text="Hello,"
            android:textColor="#2B4DA3"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/txtNama"
            android:layout_width="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#2B4DA3"
            android:textSize="24dp"
            android:fontFamily="@font/poppinsblack"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="110dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnMentalHealth"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:background="@drawable/bghome1"
            android:text="What is mental health?"
            android:textColor="#FFFFFF"
            android:clickable="true"
            android:layout_marginTop="4dp"
            android:paddingLeft="14dp"
            android:paddingTop="10dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/PentingnyaMentalHealth"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:background="@drawable/bghome2"
            android:paddingLeft="14dp"
            android:paddingTop="10dp"
            android:clickable="true"
            android:text="How important is mental health?"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginLeft="22dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnKonsul"
            android:layout_width="100dp"
            android:layout_height="78dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btnkonsul" />

        <ImageView
            android:id="@+id/btnMentaltest"
            android:layout_width="100dp"
            android:layout_height="78dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btnmentaltest"/>
        <ImageView
            android:id="@+id/btnHistory"
            android:layout_width="100dp"
            android:layout_height="78dp"
            android:background="@drawable/btnhistory"/>
    </LinearLayout>

</FrameLayout>