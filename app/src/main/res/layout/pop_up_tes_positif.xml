<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CCE3FE"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/hantu"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppinsblack"
            android:text="Confirmation Message!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/interregular"
            android:text="Based on your test result, \nwe don't suggest you \nto take counseling. \nBut if you think its needed,\nyou can take the counseling. \nWhat do you think?" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnYes"
                android:layout_width="87dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#2B4DA3"
                android:text="Yes" />

            <Button
                android:id="@+id/btnNo"
                android:layout_width="87dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:backgroundTint="#2B4DA3"
                android:text="No" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>